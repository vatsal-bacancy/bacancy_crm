<%= render 'components/site_content_2' do %>
  <% content_for :head_title do %>
    <h2 class="admin-main-title text-darkgray1 mb-0 pr-2 m-0 dark-gray-font text-capitalize">Products</h2>
  <% end %>
  <% content_for :head_buttons do %>
    <!-- <div class="pull-right">
      <%#= link_to 'Add Product', new_purchase_order_product_path, class: 'site-content-head-btn' %>
    </div> -->
    <%= link_to new_purchase_order_product_path, class: 'nowrap' do %>
      <i class="mr-2">
        <%= image_tag asset_path('add_lead.svg') %>
      </i>Add Product
    <% end %>
  <% end %>
  <% content_for :body do %>
    <div class="table-responsive">
      <table class="table table-bordered common-data-table">
        <thead>
        <tr>
          <th>Product Name</th>
          <th>Price</th>
          <th>Available</th>
          <th>Created At</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= pretty_amount product.price %></td>
            <td><%= pretty_checkbox product.available %></td>
            <td><%= pretty_date product.created_at %></td>
            <td>
              <%= link_to 'Edit', edit_purchase_order_product_path(product), class: 'btn btn-primary' %>
              <%= link_to 'Delete', purchase_order_product_path(product), method: :delete, data: {confirm: "Are you sure you want to delete?"}, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
<% end %>
