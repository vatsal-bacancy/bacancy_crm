<div class="row nested-fields" data-device-product-field>
  <div class="col-sm-5">
    <div class="form-group">
      <%= f.select :product_id, options_for_select(PurchaseOrder::Product.all.map{ |product| [product.name, product.id, 'data-product-price': product.price] }, selected: f.object.product_id), {include_blank: 'Select Product'}, class: 'form-control', 'data-device-product-select' => true %>
    </div>
  </div>
  <div class="col-sm-5">
    <div class="form-group">
      <%= number_field_tag nil, nil, readonly: true, class: 'form-control', 'data-device-product-price' => 'true' %>
    </div>
  </div>
  <div class="col-sm-2">
    <div class="form-group">
      <%= link_to_remove_association f do %>
        <i class='glyphicon glyphicon-trash'></i>
      <% end %>
    </div>
  </div>
</div>
