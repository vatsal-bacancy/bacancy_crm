<%= form_for help_desk do |f| %>
  <div class="row mt20">
    <div class="col-lg-12">
      <div class="row">
        <div class="col-md-2">
          <%= f.label :category %>
          <span class="required">*</span>
        </div>
        <div class="col-md-10">
          <div class="form-group">
            <%= f.select :category, options_for_select(help_desk_categories, selected: f.object.category), { prompt: 'Select Category' }, class: 'form-control', required: true %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          <%= f.label :title %>
          <span class="required">*</span>
        </div>
        <div class="col-md-10">
          <div class="form-group">
            <%= f.text_field :title, placeholder: 'Enter A Title', class: "form-control", required: true %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          <%= f.label :description %>
          <span class="required">*</span>
        </div>
        <div class="col-md-10">
          <div class="form-group">
            <%= f.cktext_area :description, class: "form-control", required: true, ckeditor: { toolbar: 'Full' } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt20">
    <div class="col-sm-12">
      <%= f.submit class: "btn btn-success" %>
    </div>
  </div>
<% end %>
