<div id="wrapper">
  <section>
    <div id='flash_message'></div>
    <div class="container employee_feedback">
      <div class="row row-eq-height">
        <div class="col-lg-12 col-md-12 col-sm-12 pad-0">
          <div class="container-login-center">
            <div class="login-wrapper">
              <div class="login-cmn-wrapper text-center">
                <h1 id="form-header" class="form-header">Login for Employee Feedback</h1>
                <% link_to 'Submit another response', employee_feedbacks_path, class: 'new_response' %>
                <div class="feedback_container">
                  <%= render 'employee_details_form' %>
                  <%= render 'employee_otp_form' %>
                  <%= render 'employee_feedback_form' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <%= render 'layouts/feedback_footer'%>
</div>
<style>
.login-cmn-wrapper{
  width: 690px;
}
</style>
<script>
  $(document).ready(function(){
    $('#phone_number').focus();
  })
</script>


