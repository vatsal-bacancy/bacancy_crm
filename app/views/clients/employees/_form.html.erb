<%= form_for client_employees_path do |f| %>
  <div class="row mt20">
    <div class="col-lg-12">
      <div class="row">
        <div class="col-md-2">
          <%= f.label :full_name %>
          <span class="required">*</span>
        </div>
        <div class="col-md-10">
          <div class="form-group">
            <%= f.text_field :full_name, placeholder: 'Enter full name', class: "form-control", required: true, data: { 'employee-full_name': true } %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2">
          <%= f.label :country_code %>
          <span class="required">*</span>
        </div>
        <div class="col-md-10">
          <div class="form-group">
            <%= f.select :country_code, options_for_select([['US (+1)', '+1'],['India (+91)', '+91']], selected: '+1'), include_blank: 'Please select country code', required: true, class: 'form-control fs-18' %>
            <%#= f.text_field :country_code, placeholder: 'Enter country code', class: "form-control", required: true, data: { 'employee-full_name': true } %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2">
          <%= f.label :phone_number %>
          <span class="required">*</span>
        </div>
        <div class="col-md-10">
          <div class="form-group">
            <%= f.text_field :phone_number, placeholder: 'Enter phone number', class: "form-control", required: true, data: { 'employee-full_name': true } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt20">
    <div class="col-sm-12">
      <%= f.submit class: "btn btn-success" %>
    </div>
  </div>
<% end %>
<script>
  $(document).ready(function() {
    $('[data-template-change]').on('change', function() {
      $.ajax({
        url: Routes.contract_template_path($(this).val()),
        method: "GET",
        success: function(template) {
          $('[data-contract-title]').val(template.title);
          CKEDITOR.instances.contract_contract_description.setData(template.description);
        }
      });
    });
  });
</script>
