<div class="modal fade" id="questionsModal" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <%= form_for feedback_question, class: "form-inline", remote: true do |f| %>
      <div id='flash_message'></div>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Feedback Question</h4>
        </div>
        <div class="modal-body">
          <!-- name and rate -->
          <%= f.label :title %><span class="required">*</span>
          <%= f.text_field :title, class: "form-control", placeholder: "Enter Question Title", required: true %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit class: 'btn btn-success' %>
        </div>
      </div>
    <%end%>
  </div>
</div>
