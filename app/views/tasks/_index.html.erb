<div class="dynmic-tab-div directory-structure">
  <div class="row">
    <div class="col-sm-12">
      <div class="dynmic-tab-div-header">
        <span class="heading"><%= @from_page == 'index' ? "Task" : "" %></span>
        <div class="pull-right">
          <a href="javascript:void(0)" class="dropdown-toggle site-content-head-btn pull-right m-r-10" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">

          <span class="nav-cell blue-font"> Action
            <span class="caret"></span>
          </span>
          </a>
          <ul class="dropdown-menu edit-menu">
             <li>
              <%= link_to "Edit Column", actions_settings_path(klass_id: Klass.find_by(name: 'Task').id, url: tasks_path(taskable_id: object.id, taskable_type: object.class)), class: 'dropdown-item', remote: true%>
             </li>
             <li>
               <%= link_to "Edit Properties", module_settings_path(klass_id: Klass.find_by(name: 'Task').id), class: 'dropdown-item'%>
             </li>
          </ul>
          <% if checked_permission?(current_user, @klass_list['Task'], @action_list['create'])%>

            <a href="javascript:void(0)" class="site-content-head-btn" id='destroy_all_tasks'>
              Delete
            </a>
          <%end%>
          <% if checked_permission?(current_user, @klass_list['Task'], @action_list['create'])%>
            <%= link_to new_task_path( taskable_type: object.class, taskable_id: object.id ), remote: true, class: "site-content-head-btn" do %>
              + Add Task
            <%end%>
          <%end%>
        </div>
      </div>
      <div class="dynmic-tab-div-data ">
        <div class="row">
          <div class="col-sm-12">
            <div class="site-content-data">
              <div id="task-list" class="table-list">
                <%= render partial: "tasks/task_list", locals: {object: object, task_fields: task_fields}%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $(".dropdown-toggle").dropdown();
  });
</script>
