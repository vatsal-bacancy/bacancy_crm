<div class="modal fade" id="modal" role="dialog">
  <div class="modal-dialog">

    <%= form_for user, remote: true, class: "form-inline" do |f| %>
      <div id='flash_message'></div>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Create User</h4>
        </div>
        <div class="modal-body">
          <div class='title m-b-10 p-b-5'>Create new users, one at a time.</div>
          <div class='text'>
            <p class="m-b-10">Add a new user to your BACANCY CRM account with an email address.</p>
          </div>
          <%= render 'form', f: f, user: user, groups: groups, data: data %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Invite User", class: 'btn btn-success' %>
        </div>
      </div>
    <%end%>

  </div>
</div>
