<div class="modal fade" id="layout-modal" role="dialog">
  <div class="modal-dialog">
    <%= form_for phone_number, url: users_tfa_phone_numbers_path, remote: true, class: "form-inline" do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Enter Phone number</h4>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class='col-md-12'>
              <div class='form-group'>
                <%= f.label :number, 'Phone Number' %>
                <%= f.text_field :number, class: 'form-control phone-validation', maxlength: 14, required: true %>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Save", class: 'btn btn-success' %>
        </div>
      </div>
    <%end%>
  </div>
</div>
