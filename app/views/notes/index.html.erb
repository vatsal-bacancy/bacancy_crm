<%#= render partial: 'notes/index', locals: { object: @object, note_fields: @note_fields  } %>
<div class="site-main">
  <%= render 'layouts/sidebar'%>

  <div class="site-content">
    <div class="site-content-head">
      <div class="row">
        <div class="col-sm-12">
          <div class="l-menu">
            <span class="main-menu-sitecontent">Notes</span>
            <span class="sub-menu-sitecontent m-x-10"><i class="fa fa-angle-right"></i></span>
            <span class="sub-menu-sitecontent"><%= @object.class %></span>
          </div>
          <div class='pull-right'><%= link_to @object, class: 'btn btn-success back-btn-users' do %>Back<% end %></div>
          <div class="pull-right">
            <% if checked_permission?(current_user, @klass_list["Note"], @action_list["delete"]) %>
              <a href="javascript:void(0)" class="site-content-head-btn" id='destroy_all_notes'>Delete</a>
            <%end%>
            <% if checked_permission?(current_user, @klass_list["Note"], @action_list["create"]) %>
              <%= link_to new_note_path(noteable_type: @object.class,noteable_id: @object.id), class: 'site-content-head-btn', remote: true do %>
                + Add Note
              <%end%>
            <%end%>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
       <div class="col-sm-12">
          <div class="site-content-data">
            <div id="note-list" class="table-list">
                <%= render partial: 'notes/note_list', locals: { object: @object, note_fields: @note_fields, list: 'Index' } %> <%# object.notes %>
            </div>
          </div>
       </div>
    </div>
    <div id="modalContainer-index" class='modal-right'></div>
  </div>
</div>
