$(document).ready(function(){
  $('.datepicker').datepicker({format: 'mm/dd/yyyy', todayHighlight: true, autoclose: true});
  $('#project_start_date').datepicker().on('changeDate',function(e){
    $('#project_end_date').datepicker('setStartDate',e.date);
  });
  $('#project_end_date').datepicker().on('changeDate',function(e){
    $('#project_start_date').datepicker('setEndDate',e.date);
  });
  $('#project_start_date').datepicker('setDate', new Date()).trigger('changeDate');
});
