<div class='nested-fields'>
  <div class="row">
    <p class="col-md-12">
      <%= link_to_remove_association f, class: 'common-link pull-right' do %>
        <i class="fa fa-trash" aria-hidden="true"></i>
      <% end %>
      <%= link_to 'javascript:void(0)', class: 'common-link pull-right', 'data-edit-action' => true, 'data-edit-action-url' => action_builder_work_flows_path(type: f.object.type) do %>
        <i class="fa fa-pencil" aria-hidden="true"></i>
      <% end %>
    </p>
    <div class='col-md-12'>
      <div class="form-group">
        <label for="subject">Name:</label>
        <%= f.text_field :name, class: 'form-control', disabled: true, data: { serializable: :name } %>
      </div>
    </div>
  </div>
  <%= f.hidden_field :name, data: { serializable: :name } %>
  <%= f.hidden_field :to, data: { serializable: :to } %>
  <%= f.hidden_field :cc, data: { serializable: :cc } %>
  <%= f.hidden_field :bcc, data: { serializable: :bcc } %>
  <%= f.hidden_field :subject, data: { serializable: :subject } %>
  <%= f.hidden_field :description, data: { serializable: :description } %>
  <%= f.hidden_field :type, data: { serializable: :type } %>
  <hr/>
</div>
