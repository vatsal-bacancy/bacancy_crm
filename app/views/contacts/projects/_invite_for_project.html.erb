<div class="modal fade" id="projectInvitaionModal" role="dialog">
  <div class="modal-dialog">
    <%= form_tag send_project_invitaiton_projects_path(project: @project), remote: true, class: "form-inline" do %>
      <div id='flash_message'></div>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Invite User For Project</h4>
        </div>
        <div class="modal-body Project-user-body">
          <div class='title m-b-10 p-b-5'>Invite user for '<%= @project.try(:name) %>' project.</div>
           <div class='text'>
            <p class="m-b-10">Created by <b><%= @project.try(:user).try(:fullname) %></b></p>
          </div>
          <div class='text'>
            <p class="m-b-10">Company: <b><%= @project.try(:client).try(:company_name) %></b> </p>
          </div>
          <div class='row block-ui-box m-t-5 m-r-5'>
             <div class="col-md-12">
            <div class="form-group">
             
                <%= label_tag :email %>
                <%= text_field_tag :email, params[:email], class: 'form-control tagableinput', required: true %>
              </div>
            </div>
          </div>
        </div>
         <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= submit_tag "Invite User", class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $('.tagableinput').tagsinput();
</script>