<div class="dynmic-tab-div directory-structure">
  <div class="row">
    <div class="col-sm-12">
      <div class="dynmic-tab-div-header">
        <span class="heading"><%= @from_page == 'index' ? "Ticket" : '' %></span>
        <div class="pull-right">
          <% if checked_permission?(current_user, @klass_list['Contact'], @action_list['create'])%>
            <%= link_to new_contact_path(contactable_type: contactable.class.name, contactable_id: contactable.id), remote: true, class: "site-content-head-btn" do %>
              + Add Contact
            <%end%>
          <%end%>
        </div>
      </div>
      <div class="dynmic-tab-div-data ">
        <div class="row">
          <div class="col-sm-12">
            <div class="site-content-data">
              <div id="contact-list" class="table-list">
                <%= render partial: "contacts/contact_list", locals: {contacts: contactable.contacts}%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $(".dropdown-toggle").dropdown();
  });
</script>
