<div class="modal fade" id="dirModal" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <%= form_for template_dir, local: true, class: "form-inline", remote: true, html: { multipart: true } do |f| %>

      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Template Folder</h4>
        </div>
        <div class="modal-body">
          <div id='flash_message'></div>
          <%#= render 'form', task_object: task_object,users: users, f: f %>
          <div class="form-group">
            <%= label_tag :name %>
            <%= f.text_field :name, class: 'form-control', required: true %>

          </div>
          <%= f.hidden_field :user_id, value: current_user.id%>
        </div>
        <div class="modal-footer">

          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

          <%= f.submit "Save", class: 'btn btn-success' %>
        </div>
      </div>
    <%end%>
  </div>

</div>
