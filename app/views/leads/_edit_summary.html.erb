<div class="modal fade" id="modal" role="dialog">
  <div class="modal-dialog">
    <%= form_for lead, local: true, class: "form-inline", remote: true, html: {multipart: true} do |f| %>
      <div id='flash_message'></div>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Edit Lead</h4>
        </div>
        <div class="modal-body">
          <div class='block-ui-box m-t-5 row'>
            <div class="col-sm-12">
              <h3 class="title p-b-5"><%= group.label %></h3>
              <% group.fields.each do |field| %>
                <div class="col-sm-12">
                  <div class="form-group">
                    <%= render partial: 'forms/field', locals: {f: f, field_name: field.name, field_label: field.label, column_type: field.column_type, custom: field.custom, have_custom_value: field.have_custom_value, data: @data, field: field, value: field.column_type == 'File' ? '' : lead.send(field.name)} %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
