<div>
  <div style="padding: 20px">
    <div class="site-content-head">
      <div class="row">
        <div class="col-sm-12">
          <div class="l-menu">
            <span class="sub-menu-sitecontent heading">Help Desk</span>
          </div>
        </div>
      </div>
    </div>
    <div class="site-content-head">
      <div class="row">
        <div class="col-sm-12">
          <%= form_tag nil, method: :get, class: 'navbar-form navbar-left' do %>
            <div class="navbar-search-group">
              <input type="text" class="form-control" placeholder="Search in Help Desk Articles" name="search" value="<%= params[:search] %>">
              <button type="submit" class="btn btn-default">
                <i class="fa fa-search"></i>
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="dynmic-tab-div">
          <div class="cmn-tab-div">
            <% if @help_desks_with_category.present? %>
              <% @help_desks_with_category.each do |category, help_desks|%>
                <div class="row">
                  <div class="col-sm-12">
                    <div class="dynmic-tab-div-header dynmic-tab-sub-header project-dashboard-head">
                      <div class="d-flex">
                        <div class="heading-wrapper">
                          <p class="heading white-font"><%= category %></p>
                        </div>
                      </div>
                    </div>
                    <div class="cmn-tab-div cmn-tab-div1">
                      <div class="row">
                        <div class="col-sm-12 m-t-5">
                          <div class="table-responsive">
                            <table width="100%" class="sub-table">
                              <% help_desks.each do |help_desk| %>
                                <tr>
                                  <td><%= link_to help_desk.title, public_help_desk_path(help_desk), class: "msg-link" %></td>
                                </tr>
                              <% end %>
                            </table>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            <% else %>
              No results found..!
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
