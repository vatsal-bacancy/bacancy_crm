<% action_delete =  checked_permission?(current_user, @klass_list['Inventory'], @action_list['delete']) %>
<% action_update =  checked_permission?(current_user, @klass_list['Inventory'], @action_list['update']) %>
<% action_create =  checked_permission?(current_user, @klass_list['Inventory'], @action_list['create']) %>
<% action_read =  checked_permission?(current_user, @klass_list['Inventory'], @action_list['read']) %>
<div class="site-main">
  <%= render 'layouts/sidebar'%>
  <div class="site-content">
    <div class="site-content-head">
      <div class="row">
        <div class="col-sm-12">
          <div class="l-menu">
            <span class="main-menu-sitecontent"> Inventory </span>
          </div>
          <div class="pull-right">
            <a href="javascript:void(0)" class="site-content-head-btn pointer-disable" id='destroy_all' disable='disabled'>Delete</a>
            <% if action_create %>
              <%= link_to new_inventory_path, class: 'site-content-head-btn' do %>
              + Add Inventory
              <%end%>
              <%= link_to import_inventories_path, class: 'site-content-head-btn' do %>
                Import Inventories
              <% end %>
            <% end %>
            <% if action_read %>
              <%= link_to inventories_path(format: :csv), class: 'site-content-head-btn' do %>
                Export Inventories
              <% end %>
            <% end %>
            <%= link_to "Sample CSV", root_url + "import-example-inventory.csv" , class: 'site-content-head-btn' %>
            <a href="javascript:void(0)" class="dropdown-toggle site-content-head-btn" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            <span class="nav-cell blue-font"> Action
            <span class="caret"></span>
            </span>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to "Edit Column", actions_settings_path(klass_id: @klass.id, url: request.url), class: 'dropdown-item', remote: true %>
              </li>
              <li>
                <%= link_to "Edit Properties", module_settings_path(klass_id: @klass.id), class: 'dropdown-item'%>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="site-content-data">
          <div id='inventory-list' class="table-responsive">
            <%= render partial: 'inventories/inventory_list' %>
          </div>
        </div>
      </div>
    </div>
    <div id="modalContainer" class="modal-right"></div>
    <div id="importfiled"></div>
  </div>
</div>
