<div class="site-main">
  <%= render 'layouts/sidebar'%>
  <div class="site-content">
    <div class="site-content-head">
      <div class="row">
        <div class="col-sm-12">
          <div class="l-menu">
            <%= link_to settings_path, class: "heading common-link"  do %> CRM Customization Settings <% end %>
            <span class="sub-menu-sitecontent m-x-10"> <i class="fa fa-angle-right"></i> </span>
            <%= link_to users_settings_path, class:"sub-menu-sitecontent common-link"  do %> User Settings <% end %>
            <span class="sub-menu-sitecontent m-x-10"> <i class="fa fa-angle-right"></i> </span>
            <span class="sub-menu-sitecontent m-x-10"> User Role & Permissions </span>
            <!-- <%= link_to roles_path, class: "sub-menu-sitecontent" do %> User Role & Permissions <% end %> -->
          </div>
          <div class='pull-right'><a href="<%= users_settings_path %>" class='btn btn-success back-btn-users mt7'>Back</a></div>
          <div class="pull-right">
            <%= link_to new_role_path,class: 'site-content-head-btn mt7' do %>
              + New Role
            <%end%>
          </div>
        </div>
      </div>
    </div>
     <div class="max-width-userlist">
    <div class="row">
      <div class="col-sm-12">
        <div class="site-content-data">
          <div class="table-responsive">
            <table class='table common-data-table user-list'>
              <thead>
                <tr>
                  <th>Role Name</th>
                  <th>Actions</th>
                </tr>
            </thead>
            <tbody>
              <% @roles.each do |role| %>
                <tr>
                  <td><%= role.name.titleize %></td>
                  <td>
                    <div class="btn-wrapper">
                    <div class='action-icon'>
                      <%= link_to edit_role_path(role) do %>
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                      <% end %>
                    </div>
                    <div class='action-icon'>
                      <%= link_to role_path(role), method: :delete, data: { confirm: 'Are you sure?' } do %>
                        <i class="fa fa-trash " aria-hidden="true"></i>
                      <% end %>
                    </div>
                  </div>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>
